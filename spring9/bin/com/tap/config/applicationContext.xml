<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

      <bean class="com.tap.pojo.Address"  id="addr1">
           <property name="laneNo" value="67"></property>
           <property name="city" value="bangalore"></property>
           <property name="state" value="karnatka"></property>
           <property name="country" value="india"></property>
      
      </bean>
      
   
      <bean class="com.tap.pojo.Employee"  id="empi1"  autowire="constructor" scope="singleton">
          <constructor-arg value="1"  index="0"></constructor-arg>
          <constructor-arg value="nikku"  index="1"></constructor-arg>
          <constructor-arg value="nikku@gmail.com"  index="2"></constructor-arg>
          <constructor-arg value="500000"  index="3"></constructor-arg>
      </bean>

</beans>
